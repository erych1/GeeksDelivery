<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="112dp">
    <com.google.android.material.imageview.ShapeableImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:id="@+id/item_img_product"
        android:src="@drawable/img_pizza"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_product"
        android:fontFamily="sans-serif-black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/item_img_product"
        android:layout_marginStart="22dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_ingredients_product"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="#D21C1C1C"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/desc"
        app:layout_constraintStart_toEndOf="@id/item_img_product"
        app:layout_constraintTop_toBottomOf="@id/item_name_product"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>

