<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="24dp"
    android:layout_height="150dp">
    <com.google.android.material.imageview.ShapeableImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/item_img_product"
        android:src="@drawable/img_pizza"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_name_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_product"
        android:fontFamily="sans-serif-black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/item_img_product"
        android:layout_marginStart="22dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>
    <com.google.android.material.textview.MaterialTextView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:textColor="#D21C1C1C"
    app:layout_constraintBottom_toTopOf="@id/item_sale"
    android:text="@string/desc"
    app:layout_constraintStart_toEndOf="@id/item_img_product"
    app:layout_constraintTop_toBottomOf="@id/item_name_product"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="22dp"
    app:layout_constraintEnd_toEndOf="parent"
    />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_sale"
        android:layout_width="88dp"
        android:layout_height="32dp"
        android:background="@drawable/bg_for_sale"
        android:text="@string/sale"
        android:textSize="14sp"
        android:textColor="@color/red"
        android:textAlignment="center"
        android:paddingTop="6dp"
        android:paddingStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>